                    <dd>#:shoesprice#</dd>
                </dl>
            </div>
             <div class="buy-button">
                  <a id="myButton" class="buttun btn btn-info"  href="/Shoes/MoreDetail/#:id#" >More Detail</a>
                 <button class="btn btn-success">Add to Cart</button>
            </div>
        </div>
    </script>


    <script>

        dataSource = new kendo.data.DataSource({
            transport: {
                read: {
                    url: "/Shoes/ShowData",
                    dataType: "json",
                    type: "post"

                }

            },

            pageSize: 10,
            schema: {
                model: {
                    id: "id",
                    fields: {
                        id: {type:"number"},
                        shoessize: { editable: false, nullable: true },
                        shoesbrand: { type: "string" },
                        shoesprice: { type: "number" },
                        shoespic: { type: "array" }
                    }
                }
            }
        });

        var listView = $("#listView").kendoListView({
            dataSource: dataSource,
            template: kendo.template($("#template").html()),
            pageable: true
        }).data("kendoListView");




  
    </script>

  
