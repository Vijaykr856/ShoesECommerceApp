    <script type="text/x-kendo-tmpl" id="template">
        <div class="product-view k-widget">
           
            <div class="shoe-image">
                <img src="data:image/*;base64,#:shoespic#" alt="Shoe Image" style="height: 200px; width: 200px;">
            </div>
            <!-- Details -->
